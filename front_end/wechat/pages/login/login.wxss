/* pages/login/login.wxss */
.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

.input-group {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}

.btn-login {
  margin-top: 60rpx;
  width: 100%;
  border-radius: 50rpx;
  font-size: 34rpx;
}

.action-container {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-text {
  color: #007AFF;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.divider {
  color: #ccc;
  font-size: 24rpx;
}